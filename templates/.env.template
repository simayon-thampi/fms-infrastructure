# Environment Variables Template

# Copy this file to /home/ubuntu/fms/.env on EC2
# Update values according to your environment

# Application
NODE_ENV=production
PORT=8003
API_STR=/api

# Database
DATABASE_URL=postgresql://admin:password@host.docker.internal:5432/applications
POSTGRES_HOST=host.docker.internal
POSTGRES_PORT=5432
POSTGRES_USER=admin
POSTGRES_PASSWORD=password
POSTGRES_DB=applications

# Security
SECRET_KEY=your-secret-key-here
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# MQTT
MQTT_BROKER_HOST=localhost
MQTT_BROKER_PORT=1883

# CORS
BACKEND_CORS_ORIGINS=https://localhost:8443

# Upload
UPLOAD_DIRECTORY=/app/uploads/app-icons
